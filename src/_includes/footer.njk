    </section>
    <section class="row" style="text-align: center">
      <p>
        {% if languages %}
          {% for language in languages %}
            {% if not loop.first %} | {% endif %}
            <a href="/{{ language.iso }}/">{{ language.name }}</a>
          {% endfor %}
        {% else %}
          <span style="color: red; font-size: 12px;">Debug: languages data not found</span>
        {% endif %}
      </p>
    </section>
    <section class="row">
      <p>&copy; CSS Animation. Site by <a href="http://hop.ie">Donovan</a></p>
    </section>
  </section>
